{
    "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "typeRoots": [
            "../node_modules/@typescript-to-lua",
            "../node_modules/@byte-fw"
        ],
        "module": "es2022",
        "types": [
            "language-extensions",
            "fivem-natives/index.d.ts"
        ],
        "moduleResolution": "bundler",
        "strict": true,
        "rootDir": ".",
        "outDir": "../build/server",
        "declaration": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "../node_modules",
        "../shared",
        ".ignored_shared"
    ],
    "tstl": {
        "luaTarget": "5.4",
        "noImplicitSelf": true,
        "noHeader": true
    },
    "typedocOptions": {
        "name": "Server",
        "out": "../docs/server",
        "exclude": [
            "**/.ignored_shared/**/*.ts",
            "./*/**/index.ts"
        ],
        "entryPointStrategy": "expand",
        "plugin": "typedoc-github-theme"
    }
}